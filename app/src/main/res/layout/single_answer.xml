<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImage_answer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />

        <TextView
            android:id="@+id/userName_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/userImage_answer"
            android:layout_toRightOf="@+id/userImage_answer"
            android:paddingLeft="5dp"
            android:paddingTop="12dp"
            android:text="USER NAME"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userImage_answer"
            android:layout_margin="2dp"
            android:text="ANSWER WILL BE HERE"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/down_votes"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/answer"
            android:layout_margin="2dp"
            android:src="@drawable/td_non" />

        <TextView
            android:id="@+id/upCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/up_votes"
            android:layout_toLeftOf="@+id/up_votes"
            android:text="00" />

        <ImageView
            android:id="@+id/up_votes"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/answer"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/downCount"
            android:src="@drawable/tu_non" />


        <TextView
            android:id="@+id/downCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/down_votes"
            android:layout_toLeftOf="@+id/down_votes"
            android:text="00" />

    </RelativeLayout>
</android.support.v7.widget.CardView>